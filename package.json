{
	"name": "nech",
	"private": true,
	"workspaces": ["packages/*", "apps/*", "tooling/*"],
	"scripts": {
		"build": "turbo build",
		"clean": "git clean -xdf node_modules",
		"clean:workspaces": "turbo clean",
		"dev": "dotenv -c -- turbo dev --parallel",
		"dev:web": "dotenv -c -- turbo dev --filter=@nech/web",
		"dev:app": "dotenv -c -- turbo dev --filter=@nech/app",
		"dev:api": "dotenv -c -- turbo dev --filter=@nech/api",
		"dev:email": "dotenv -c -- turbo dev --filter=@nech/mail",
		"start:web": "dotenv -c -- turbo start --filter=@nech/web",
		"start:app": "dotenv -c -- turbo start --filter=@nech/app",
		"supabase:start": "dotenv -c -- turbo dev --filter=@nech/api",
		"supabase:reset": "dotenv -c -- turbo reset --filter=@nech/api",
		"supabase:generate": "dotenv -c -- turbo generate --filter=@nech/api",
		"test": "turbo test --parallel",
		"format": "biome format --write .",
		"lint": "turbo lint && manypkg check",
		"typecheck": "turbo typecheck"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@manypkg/cli": "^0.23.0",
		"dotenv-cli": "^8.0.0",
		"tsconfig": "workspace:*",
		"turbo": "^2.3.3",
		"type-fest": "^4.30.2",
		"typescript": "5.7.2"
	},
	"packageManager": "bun@1.1.38"
}
